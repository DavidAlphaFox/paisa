{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://paisa.fyi/schema.json",
  "title": "Paisa",
  "description": "Paisa config schema",
  "type": "object",
  "properties": {
    "journal_path": {
      "type": "string"
    },
    "db_path": {
      "type": "string"
    },
    "ledger_cli": {
      "type": "string",
      "enum": ["ledger", "hledger"]
    },
    "default_currency": {
      "type": "string"
    },
    "locale": {
      "type": "string",
      "pattern": "^en-[A-Z]{2}$"
    },
    "financial_year_starting_month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "retirement": {
      "type": "object",
      "properties": {
        "swr": {
          "type": "number"
        },
        "expenses": {
          "type": "array",
          "default": ["Expenses:Utilities"],
          "items": {
            "type": "string"
          }
        },
        "savings": {
          "type": "array",
          "default": ["Expenses:Equity"],
          "items": {
            "type": "string"
          }
        },
        "yearly_expenses": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "schedule_al": {
      "type": "array",
      "default": [
        {
          "code": "bank",
          "accounts": ["Assets:Checking"]
        }
      ],
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "enum": [
              "immovable",
              "metal",
              "art",
              "vehicle",
              "bank",
              "share",
              "insurance",
              "loan",
              "cash",
              "liability"
            ]
          },
          "accounts": {
            "type": "array",
            "default": ["Assets:Checking"],
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["code", "accounts"],
        "additionalProperties": false
      }
    },
    "allocation_targets": {
      "type": "array",
      "default": [{ "name": "Debt", "target": 20, "accounts": ["Assets:Debt:*"] }],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "target": {
            "type": "integer"
          },
          "accounts": {
            "type": "array",
            "default": ["Assets:Debt:*"],
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "target", "accounts"],
        "additionalProperties": false
      }
    },
    "commodities": {
      "type": "array",
      "default": [
        { "name": "AAPL", "type": "stock", "code": "AAPL", "tax_category": "unlisted_equity" }
      ],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["mutualfund", "stock", "nps", "unknown"]
          },
          "code": {
            "type": ["string", "integer"]
          },
          "harvest": {
            "type": "integer"
          },
          "tax_category": {
            "type": "string",
            "enum": ["debt", "equity", "equity65", "equity35", "unlisted_equity"]
          }
        },
        "required": ["name", "type", "code"],
        "additionalProperties": false
      }
    }
  },
  "required": ["journal_path", "db_path"],
  "additionalProperties": false
}
